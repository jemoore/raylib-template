            "binaryDir": "${sourceDir}/build/vs2022-debug-shared",
            "inherits": ["vs2022-shared", "debug"],
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/vs2022-debug/install"
            }
        }
